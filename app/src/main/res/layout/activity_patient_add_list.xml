<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="Patient Registration Form"
      android:textAppearance="?android:attr/textAppearanceLarge" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:orientation="horizontal">

    <EditText
        android:id="@+id/editTextKitapID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Patient ID" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnGec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Dashboard"
        android:textAllCaps="false" />
  </LinearLayout>

  <EditText
      android:id="@+id/editTextKitapAdi"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:hint="Patient Name" />

  <EditText
      android:id="@+id/editTextYazarAdi"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:hint="Who Recording(User Name)" />

  <EditText
      android:id="@+id/editTextYayinevi"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:hint="Patient  Address" />

  <EditText
      android:id="@+id/editTextSayfa"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:hint="Patient Dept" />

  <Button
      android:id="@+id/btnSave"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="Save"
      android:textAllCaps="false" />

  <Button
      android:id="@+id/btnGetAllBooks"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="View All Records"
      android:textAllCaps="false" />

  <Button
      android:id="@+id/btnUpdate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="List My Patients"
      android:textAllCaps="false" />


  <TextView
      android:id="@+id/goruntule"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_horizontal"
      android:scrollbars="vertical"
      android:text=""
      android:textAppearance="?android:attr/textAppearanceLarge" />




</LinearLayout>